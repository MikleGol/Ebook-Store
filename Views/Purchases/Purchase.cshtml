@model Client

@{
    ViewData["Title"] = "Покупка";
}

<h1>Покупка @ViewBag.Ebooks</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        
            <form method="post" asp-action="Purchase">
                <input type="hidden" name="ebookId" value="@ViewBag.EbookId" />
                <input type="hidden" name="authId" value="@ViewBag.AuthId" />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
               
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Surname" class="control-label"></label>
                    <input asp-for="Surname" class="form-control" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label">E-mail</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <table>
                    <tr>
                        <td>
                            <input type="submit" value="Придбати" class="btn btn-success" />
                        </td>
                    </tr>
                </table>
            </form>
</div>
</div>

<form method="get" asp-controller="Ebooks" asp-action="Index">
    <input type="hidden" name="id" value="@ViewBag.AuthId" />
    <div class="modal fade" id="confirm" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Попередження</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body delete-modal-body">
                    Ви хочете повернутися?
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-danger">Так</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Ні</button>
                </div>
            </div>
        </div>
    </div>
</form>