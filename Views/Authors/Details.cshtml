@model IEnumerable<Ebook>

@{
    ViewData["Title"] = ViewBag.Author;
}

<h1>@ViewBag.Author</h1>

@foreach (var item in Model)
{
    <div class="row">
        <div class="col-md-4">
            <p><b>Назва:</b> @item.Name</p>
            <p><b>Вартість:</b> @item.Price</p>
            <p><b>Опис</b></p>
            <p>@item.Description</p>
            <p><b>Формат</b></p>
            <p>@item.Format</p>
        </div>
    </div>
}
<form method="get" asp-action="Index">
    <input type="submit" class="btn btn-primary" value="Список авторів" />
</form>
